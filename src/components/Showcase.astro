---
import { Image } from "astro:assets";
import heroImage from "../images/_driveway.jpg";
import arrow from "../images/arrow.svg";
---

<section class="bg-white">
  <div class="mx-auto px-4 2xl:px-40 py-8 lg:py-16">
    <div class="flex flex-col lg:flex-row xl:space-x-8 justify-between">
      <div class="w-full lg:w-7/12">
        <h1
          class="align-start text-black font-bold tracking-tighter mb-4 lg:mb-0 text-5xl xl:text-7xl"
        >
          Add value and street appeal to your home.
        </h1>
      </div>
      <div class="flex lg:w-5/12 items-end w-full lg:max-w-md px-2">
        <p class="text-gray-500 text-lg">
          Welcome to Drive Tech Uk Ltd, your trusted partner for premium
          driveway &amp; patio solutions.
        </p>
      </div>
      <div class="flex items-end ml-auto">
        <Image
          id="scroll-trigger"
          class="icon w-9 lg:w-10 2xl:w-12"
          src={arrow}
          alt="arrow"
        />
      </div>
    </div>
  </div>
  <div>
    <Image
      class="h-80 object-cover md:h-auto"
      alt="Block paved driveway created by Drive Tech UK Ltd"
      src={heroImage}
    />
  </div>
</section>
<script>
  document.getElementById("scroll-trigger").addEventListener("click", () => {
    document.getElementById("target").scrollIntoView({ behavior: "smooth" });
  });
</script>
<style>
  .icon {
    display: inline-block;
    transition: transform 0.6s;
    cursor: pointer;
  }

  /* Keyframes for the bounce animation */
  @keyframes bounce {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(10px);
    }
  }

  .icon:hover {
    animation: bounce 0.6s;
  }

