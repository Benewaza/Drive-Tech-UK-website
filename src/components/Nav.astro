---
import { Image } from "astro:assets";
import logo from "../images/dt-logo.png";
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<nav class="bg-white px-4 2xl:px-40 rounded stroke">
  <div class="md:flex md:justify-between py-4">
    <div class="flex justify-between items-center">
      <a href={`${Astro.site}/`}>
        <Image src={logo} alt="Drive Tech UK Ltd Logo" class="w-48 lg:w-64" />
      </a>

      <div class="flex items-center">
        <button
          id="menu-toggle"
          type="button"
          class="inline-flex items-center p-2 ml-3 text-sm text-gray-500 rounded-lg hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 md:hidden"
        >
          <span class="sr-only">Open main menu</span>
          <!-- Hamburger icon -->
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>

    <div
      class="w-full md:block md:w-auto max-h-0 md:max-h-max overflow-hidden transition-all duration-300 ease-in-out"
      id="mobile-menu"
    >
      <ul
        class="flex flex-col mt-4 md:flex-row md:space-x-6 md:mt-0 md:text-sm md:font-medium"
      >
        <li>
          <a
            href={`${Astro.site}/`}
            class={`block text-lg py-2 pr-4 pl-3 text-gray-700 bg-gray-50 md:bg-white hover:bg-gray-100 md:hover:bg-transparent ${currentPath === "" ? "active" : ""}`}
          >
            Home
          </a>
        </li>

        <li>
          <a
            href={`${Astro.site}/contact`}
            class={`cta block md:font-bold text-lg md:text-base pr-4 pl-3 py-3 md:px-10 text-gray-700 bg-gray-50 hover:bg-gray-100 md:text-white ${currentPath === "contact" ? "active md:bg-red-700 md:hover:bg-red-800 after:!w-0" : "md:bg-red-500 md:hover:bg-red-700"}`}
          >
            Contact
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>
<script>
  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");

  menuToggle.addEventListener("click", function () {
    mobileMenu.classList.toggle("max-h-0"); // Collapse height
    mobileMenu.classList.toggle("max-h-96"); // Expand height
  });
</script>

<style>
  @media only screen and (min-width: 768px) {
    nav ul li a:not(.active),
    nav ul li a:not(.active):after,
    nav ul li a:not(.active):before {
      transition: all 0.5s;
    }

    nav.stroke ul li a:not(.active) {
      position: relative;
    }
    nav.stroke ul li a:not(.active, .cta):after {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      margin: auto;
      width: 0%;
      content: ".";
      color: transparent;
      background: #000;
      height: 2px;
    }
    nav.stroke ul li a:not(.active):hover:after {
      width: 75%;
    }

    nav.stroke ul li a.active {
      position: relative;
    }
    nav.stroke ul li a.active:after {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      margin: auto;
      width: 75%;
      content: ".";
      color: transparent;
      background: #000;
      height: 2px;
    }
  }
</style>
